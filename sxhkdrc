#
# bspwm hotkeys
#

alt + super + Escape
   ~/.config/bspwm/misc/killall ; bspc quit 1

# Close current window
alt + w
    bspc window -c

# Presets window distribution
alt + b
    bspc desktop -B

# s - float / f - fullscreen
alt + {s,f}
    bspc window -t {floating,fullscreen}

#alt + {grave,Tab}
#    bspc {window,desktop} -f last

# swap window with the last
alt + apostrophe
    bspc window -s last

# Focus next window
alt + {_,shift +} Tab
  bspc window -f {next,prev}

# Focus {h,j,k,l} window
alt + {h,j,k,l}
  bspc window -f {left,down,up,right}

#alt + y
#    bspc window -w last.manual

# Move current window to the biggest spot
alt + m
    bspc window -s biggest

# Move window to the {h,j,k,l} position
alt + ctrl + {h,j,k,l}
    bspc window -s {left,down,up,right}

#alt + {_,shift + }c
#    bspc window -f {next,prev}

# Move window back and forward
alt + {comma,period}
    bspc desktop -C {backward,forward}

# Cycle through desktops
alt + bracket{left,right}
    bspc desktop -f {prev,next}

# Move through desktop
#alt + ctrl + {_,shift +}Tab
#    bspc desktop -f {next,prev}

alt + {_,shift +}grave
    bspc desktop -f {next,prev}

# Create a new window on the given spot
alt + shift + {h,j,k,l}
    bspc window -p {left,down,up,right}

# alt+ctrl+space cancel spot selection
alt + space
    bspc window -p cancel

# Increase window width or height
alt + super + shift + {h,j,k,l}
    bspc window -e {left,down,up,right} push

# Decrease window width or height
alt + super + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

# Go to or move to a window to given desktop
alt + {_,ctrl+ }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# Mouse pointer raises focus on window
~button1
    bspc pointer -g focus

# Mouse button to move and resize
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u

# change window gap at run time
alt + ctrl + equal
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

alt + ctrl + shift + equal
    bspc config top_padding 6; bspc config -d focused window_gap 15

alt + ctrl + minus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 5 ))

alt + ctrl + shift + minus
    bspc config top_padding 14; bspc config -d focused window_gap 0

#
# wm independent hotkeys
#

# Launch terminal
ctrl + Return
    gnome-terminal

ctrl + shift + Return
    gnome-terminal && bspc window -t floating && wmctrl -r :ACTIVE: -e 0,760,650,590,110

ctrl + shift + {comma,period}
    ncmpcpp {prev,next}

# Show dmenu bar
ctrl + space
    dmenu_run -b -p '>' -fn 'lucidasans-8' -nf '#666666' -nb '#000000' -sf '#ffffff' -sb '#000000'

# make sxhkd reload its configuration files:
ctrl + Escape
    pkill -USR1 -x sxhkd

# Take an screenshot
ctrl + Print
    scrot -d3 -e "mv \$f ~/Pictures/"

# Launch vimprobable
ctrl + shift + v
    vimprobable

# Toggle visibility status bar
ctrl + shift + space
    ~/.config/bspwm/misc/hide dzen2-bottom-status-bar

