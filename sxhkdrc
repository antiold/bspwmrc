# vim: set foldmarker={{,}} foldlevel=0 foldmethod=marker nospell:
#
# bspwm hotkeys
#

# general hotkeys {{
alt + super + Escape
   ~/.config/bspwm/misc/killall ; bspc quit 1

# make sxhkd reload its configuration files:
ctrl + Escape
    pkill -USR1 -x sxhkd

# Close current window
alt + w
    bspc window -c

# Presets window distribution
#alt + b
#    bspc desktop -B
# }}

# mouse settings {{
# Mouse pointer raises focus on window
~button1
    bspc pointer -g focus

# Mouse button to move and resize
alt + button{1-3}
    bspc pointer -g {move,resize_side,resize_corner}

alt + !button{1-3}
    bspc pointer -t %i %i

alt + @button{1-3}
    bspc pointer -u
# }}

# window related hotkeys {{
# s - float
alt + s
    bspc window -t floating

# f - fullscreen
#alt + f
#    bspc window -t fullscreen
alt + f
    ~/.config/bspwm/misc/full&>/tmp/bspwm.full.plugin.log

#alt + {grave,Tab}
#    bspc {window,desktop} -f last

# swap window with the last
alt + apostrophe
    bspc window -s last

# Focus other desktop
alt + ctrl + grave
    bspc monitor -f next

# Focus next window
alt + {_,shift +} Tab
  bspc window -f {next,prev}

# Focus {h,j,k,l} window
alt + {h,j,k,l}
  bspc window -f {left,down,up,right}

# Create a new window on the given spot
alt + shift + {h,j,k,l}
    bspc window -p {left,down,up,right}

# alt+ctrl+space cancel spot selection
alt + space
    bspc window -p cancel

# }}

# moving around {{
#alt + y
#    bspc window -w last.manual

# Move current window to the biggest spot
alt + m
    bspc window -s biggest

# Move window to other monitor
alt + shift + ctrl + {h,l}
    bspc window -m {prev,next}
    bspc monitor -f {prev,next}

# Move window to the {h,j,k,l} position
alt + ctrl + {h,j,k,l}
    bspc window -s {left,down,up,right}

#alt + {_,shift + }c
#    bspc window -f {next,prev}

# Move window back and forward
alt + {comma,period}
    bspc desktop -C {backward,forward}

# Cycle through desktops
alt + bracket{left,right}
    bspc desktop -f {prev,next}

# Move through desktop
#alt + ctrl + {_,shift +}Tab
#    bspc desktop -f {next,prev}

alt + {_,shift +}grave
    bspc desktop -f {next,prev}
# }}

# change window size and position {{
# Increase window width or height
alt + super + shift + {h,j,k,l}
    bspc window -e {left,down,up,right} push

# Decrease window width or height
alt + super + {h,j,k,l}
    bspc window -e {right,up,down,left} pull

# Go to or move to a window to given desktop
alt + {_,ctrl+ }{1-9,0}
    bspc {desktop -f,window -d} ^{1-9,10}

# change window gap at run time
alt + ctrl + equal
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 5 ))

alt + ctrl + shift + equal
    bspc config top_padding 6; bspc config -d focused window_gap 15

alt + ctrl + minus
    bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 5 ))

alt + ctrl + shift + minus
    bspc config top_padding 14; bspc config -d focused window_gap 0

# source: http://crunchbang.org/forums/viewtopic.php?pid=378171#p378171
# move floating windows (requires baskerville's xdo pacacur -S xdo-git)
super + {h,l,k,j}
    xdo move {-x -50,-x +50,-y -50,-y +50}

# Resize floating windows
super + shift + {h,l,k,j}
    xdo resize {-w -50,-w +50,-h -50,-h +50}

# }}

# application launchers {{
ctrl + Return
    gnome-terminal

# floating terminal
ctrl + shift + Return
  ~/.config/bspwm/misc/floating_terminal

# php storm
super + s
    storm

# sublime text / TODO change for textadept or remove
super + shift + s
    subl

# chromium
super + c
    chromium

# firefox TODO remove
super + f
    firefox

# htop TODO remove
super + t
    gnome-terminal -e htop

# nautilus
super + n
    nautilus

# ncmpcpp
super + shift + n
    gnome-terminal -e ncmpcpp

# vimprobable
super + v
    vimprobable

# ranger TODO default for ctrl + enter
super + r
    gnome-terminal -e ranger

# vim
super + shift + v
    gnome-terminal -e vim
# }}

# application actions {{
# ncmpcpp next / prev song
ctrl + shift + {comma,period}
    ncmpcpp {prev,next}

# Show dmenu bar
ctrl + space
    ~/.config/bspwm/misc/application_launcher

# Show dmenu bar (windows)
ctrl + alt + space
    ~/.config/bspwm/misc/application_switcher

# Take an screenshot
ctrl + Print
    ~/.config/bspwm/misc/screenshot

# Toggle visibility status bar
ctrl + shift + space
    ~/.config/bspwm/misc/hide dzen2-bottom-status-bar

# hide currently active window
ctrl + shift + h
    ~/.config/bspwm/misc/toggle hide

# unhide lastest window
ctrl + shift + u
    ~/.config/bspwm/misc/toggle show

# }}
