#!/bin/bash
# init script
compton=~/.compton/
bspdir=$(dirname $(readlink -f $0))
cd $bspdir

# gnome settings daemon (for fonts and gtk styling)
gnome-settings-daemon &

# set background
# gsettings set org.gnome.desktop.background picture-uri file:///home/user/Pictures/wallpaper.png
#~/.fehbg &

# gnome terminals
#gnome-terminal &
#  gnome-terminal -e ranger &

[[ -e $compton/compton ]] \
  && $compton/compton --config $compton/compton.conf &

# launch dzen2 panel
$bspdir/panel dzen2 top dzen2 top-bar &
  $bspdir/panel dzen2-status bottom dzen2 status-bar &
  sleep 5 && $bspdir/panels/hide

