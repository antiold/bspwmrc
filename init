#!/bin/bash
# init script
compton=~/.compton/
bspdir=$(dirname $(readlink -f $0))
cd $bspdir

# gnome settings daemon (for fonts and gtk styling)
gnome-settings-daemon &

# set background
# gsettings set org.gnome.desktop.background picture-uri file:///home/user/Pictures/wallpaper.png
#~/.fehbg &

# gnome terminals
#gnome-terminal &
#  gnome-terminal -e ranger &

[[ -e $compton/compton ]] \
  && $compton/compton --config $compton/compton.conf &

# launch dzen2 panel
nohup $bspdir/panel -f topbar -i top-bar & $bspdir/panel -f status -i status-bar & sleep 5 && $bspdir/panels/hide

